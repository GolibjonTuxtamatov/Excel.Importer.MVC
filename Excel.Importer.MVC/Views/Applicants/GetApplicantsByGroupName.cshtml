@model List<Applicant>

@{
    ViewData["Title"] = "GetApplicantsByGroupName";
}

<h1>Applicants</h1><br />
<a asp-action="PostApplicant" class="btn btn-outline-primary">
    Add Applicant
</a>
<a asp-controller="Applicants" asp-action="SearchApplicant" class="btn btn-outline-secondary">
    SearchApplicant
</a>

<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th>Group Name</th>
        </tr>
    </thead>
    <tbody class="table-applicant-driver">
        @foreach (var applicant in Model)
        {
            <tr>
                <td>@applicant.FirstName</td>
                <td>@applicant.LastName</td>
                <td>@applicant.Email</td>
                <td>@applicant.PhoneNumber</td>
                <td>@applicant.GroupName</td>
                <td>
                    <a asp-controller="Applicants" asp-action="EditApplicant" asp-route-id="@applicant.Id" class="btn btn-outline-primary btn-m1">
                        Edit
                    </a>
                    <a asp-controller="Applicants" asp-action="DeleteApplicant" asp-route-id="@applicant.Id" class="btn btn-outline-danger btn-m1">
                        Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
