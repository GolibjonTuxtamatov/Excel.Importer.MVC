@model IQueryable<Group>
@{
    ViewData["Title"] = "GetAllGroups";
}
<h2>Groups</h2>
<a asp-action="PostGroup" class="btn btn-outline-primary">
    Add Group
</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Group Name</th>
        </tr>
    </thead>
    <tbody class="table-group-divider">
        @{
            int i = 1;
            foreach (var group in Model)
            {
                <tr>
                    <th scope="row">@i</th>
                    <td>
                        <a asp-controller="Applicants" asp-action="GetApplicantsByGroupName" asp-route-id="@group.Id" class="btn btn-outline-dark btn-m1">
                            @group.GroupName
                        </a>
                    </td>
                    <td>
                        <a asp-controller="Groups" asp-action="Edit" asp-route-id="@group.Id" class="btn btn-outline-primary btn-m1">
                            Edit
                        </a>
                        <a asp-controller="Groups" asp-action="DeleteGroup" asp-route-id="@group.Id" class="btn btn-outline-danger btn-m1">
                            Delete
                        </a>
                    </td>
                </tr>
                i += 1;
            }
        }
    </tbody>
</table>